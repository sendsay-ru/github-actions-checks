{
  "env": {
    "NODE_ENV": "CI",
    "FORCE_COLOR": "1"
  },
  "jobs": [
    {
      "key": "checks",
      "steps": [
        {
          "key": "prettier",
          "name": "Prettier",
          "command": "yarn prettify"
        },
        {
          "key": "stylelint",
          "name": "Stylelint",
          "command": "yarn stylelint"
        },
        {
          "key": "typescript",
          "name": "TypeScript",
          "command": "yarn dev-tsc"
        }
      ]
    },
    {
      "key": "eslint",
      "steps": [
        {
          "key": "eslint",
          "name": "ESLint",
          "command": "yarn eslint"
        }
      ]
    },
    {
      "key": "unit-app",
      "steps": [
        {
          "key": "unit",
          "name": "Unit-app",
          "command": "yarn unit-app"
        }
      ]
    },
    {
      "key": "unit-rest",
      "steps": [
        {
          "key": "unit",
          "name": "Unit-rest",
          "command": "yarn unit-packages"
        }
      ]
    }
  ],
  "showComments": true,
  "useTurbo": true,
  "node": 16,
  "installCommand": "yarn install",
  "buildCommand": "yarn build-packages"
}
